<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="@dimen/keyInset">
    <layer-list>
        <item android:bottom="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <gradient
                    android:angle="90"
                    android:endColor="#2F7F7F7F"
                    android:startColor="#2F000000" />
            </shape>
        </item>

        <item
            android:bottom="@dimen/keyInset"
            android:left="@dimen/keyInset"
            android:right="@dimen/keyInset"
            android:top="@dimen/keyInset">
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/white" />
            </shape>
        </item>
    </layer-list>
</inset>
