<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="4dp">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid
                    android:color="#7FFFFFFF"/>
                <corners android:radius="6dp" />
            </shape>
        </item>

        <item
            android:top="1dp"
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp">
            <shape android:shape="rectangle">
                <solid
                    android:color="#19FFFFFF"/>
                <corners android:radius="5dp" />
            </shape>
        </item>
    </layer-list>
</inset>