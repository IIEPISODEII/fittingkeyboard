<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="2dp">
    <layer-list>
        <item
            android:top="2dp">
            <shape android:shape="rectangle">
                <solid
                    android:color="#7FBA6B2F"/>
                <corners android:radius="2dp" />
            </shape>
        </item>

        <item
            android:top="2dp"
            android:drawable="@drawable/wood">
        </item>

        <item
            android:top="3dp"
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp">
            <shape android:shape="rectangle">
                <solid
                    android:color="#7FFFFFFF"/>
                <corners android:radius="2dp" />
            </shape>
        </item>
    </layer-list>
</inset>