<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="2dp">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid
                    android:color="#19FFFFFF"/>
                <corners android:radius="4dp" />
            </shape>
        </item>

        <item
            android:top="1dp"
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp">
            <shape android:shape="rectangle">
                <solid
                    android:color="#37FFFFFF"/>
                <corners android:radius="3dp" />
            </shape>
        </item>

    </layer-list>
</inset>