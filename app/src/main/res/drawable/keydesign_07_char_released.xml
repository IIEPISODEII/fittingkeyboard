<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="2dp">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#19FFFFFF" />
                <corners android:radius="6dp" />
            </shape>
        </item>

        <item
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp"
            android:top="1dp">
            <shape android:shape="rectangle">
                <solid android:color="#37FFFFFF" />
                <corners android:radius="5dp" />
            </shape>
        </item>

    </layer-list>
</inset>