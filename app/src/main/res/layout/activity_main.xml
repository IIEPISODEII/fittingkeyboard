<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sb.fittingKeyboard.keyboardSettings.MainActivity"
    tools:ignore="HardcodedText,RtlHardcoded">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main_setting_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#007BFF"
        android:minHeight="50dp"
        android:theme="@style/appBar"
        app:layout_constraintBottom_toTopOf="@id/tablayout_main_setting_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_main_setting_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/view_main_setting_activity_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_main_setting_activity"
        app:tabIndicatorColor="#007BFF"
        app:tabSelectedTextColor="#007BFF"
        app:tabTextColor="@color/black" />

    <View
        android:id="@+id/view_main_setting_activity_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgrey"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/tablayout_main_setting_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2_main_setting_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toTopOf="@id/edittext_main_setting_activity_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_main_setting_activity_divider" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittext_main_setting_activity_test"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/view_edittext"
        android:gravity="center"
        android:hint="@string/textView_try"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:padding="2dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewpager2_main_setting_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>