<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/setting_font_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_themesetting_normalkey_font_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button3"
                android:padding="2dp"
                android:text="일반 글자색"
                android:textColor="#007BFF"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_right_arrow_blue"
                app:drawableRightCompat="@drawable/ic_right_arrow_blue"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_themesetting_functionkey_font_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button3"
                android:padding="2dp"
                android:text="기능 글자색"
                android:textColor="#007BFF"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_right_arrow_blue"
                app:drawableRightCompat="@drawable/ic_right_arrow_blue"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_themesetting_font_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button3"
                android:padding="2dp"
                android:text="폰트 타입"
                android:textColor="#007BFF"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_right_arrow_blue"
                app:drawableRightCompat="@drawable/ic_right_arrow_blue"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyview_themesetting_theme_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/view_setting"
            android:padding="5dp"
            android:scrollbars="vertical"
            app:spanCount="3" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>