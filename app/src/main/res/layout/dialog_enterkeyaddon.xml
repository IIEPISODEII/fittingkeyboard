<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_EnterkeyAddonSelect_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="엔터키 부가기능"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/dialog_EnterkeyAddonSelect_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/dialog_EnterkeyAddonSelect_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_EnterkeyAddonSelect_tv">

        <RadioButton
            android:id="@+id/dialog_EnterkeyAddonSelect_none"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="없음"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/dialog_EnterkeyAddonSelect_autotext"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="상용구"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/dialog_EnterkeyAddonSelect_cursor"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="커서이동 및 편집"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/dialog_EnterkeyAddonSelect_ok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_margin="3dp"
        android:background="@color/white"
        android:text="확인"
        android:textColor="#299FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_EnterkeyAddonSelect_rg" />
</androidx.constraintlayout.widget.ConstraintLayout>