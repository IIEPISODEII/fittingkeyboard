<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_settingimekr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="한글입력기 선택"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroup_settingimekr_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_settingimekr_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_settingimekr_title">

        <RadioButton
            android:id="@+id/radiobtn_settingimekr_qwerty"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="쿼티(기본)"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radiobtn_settingimekr_chun"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="천지인"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radiobtn_settingimekr_narat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="나랏글"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radiobtn_settingimekr_chun_ambi"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="천지인 양손"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radiobtn_settingimekr_danmo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="단모음"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_settingimekr_save"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_margin="3dp"
        android:background="@color/white"
        android:text="저장"
        android:textColor="#299FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup_settingimekr_container" />
</androidx.constraintlayout.widget.ConstraintLayout>